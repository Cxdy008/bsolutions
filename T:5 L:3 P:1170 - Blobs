using System; 

class URI {

    static void Main(string[] args) { 

       int N = int.Parse(Console.ReadLine());
       for(int i = 0; i<N;i++){
           double quantidade = double.Parse(Console.ReadLine());
           int dias=0;
           while(quantidade>1){
               quantidade/=2;
               dias++;
           }
           Console.WriteLine("{0} dias",dias);
       }

    }

}
